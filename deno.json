{
  "tasks": {
    "dev": "deno run --allow-all --watch ./src/main.ts",
    "build:windows": "deno compile --target x86_64-pc-windows-msvc --output ./dist/server --allow-net --allow-env --allow-read --allow-write --allow-sys ./src/main.ts",
    "build:linux": "deno compile --target x86_64-unknown-linux-gnu --output ./dist/server --allow-net --allow-env --allow-read --allow-write --allow-sys ./src/main.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "~/": "./src/"
  }
}
